///app.controller.ts 
import { Controller, Get, Post, Param} from '@nestjs/common';
import { AppService } from './app.service';

@Controller()
export class AppController {
  constructor(private readonly appService: AppService) {}

  @Get()
  getHello(): string {
    return this.appService.getHello();
  }

  @Get('/saludo')
  getSaludo(): string {
    return 'Hola Mundo'
  }

  @Post ('/suma/:sumando1/:sumando2')
getResultado(
    @Param('sumando1') sumando1: number,
    @Param('sumando2') sumando2: number,
): number {
    const num1 = +sumando1;
    const num2 = +sumando2;
    return this.appService.sumar(sumando1,sumando2);
    }

    @Get('saludo/:nombre')
    getSaludando(@Param('nombre') nombre: string): string {
      return `Buenos d√≠as ${nombre}`;
    }
    
}

////app.service.ts

import { Injectable } from '@nestjs/common';

@Injectable()
export class AppService {
  getHello(): string {
    return 'Hello World!';
  }

  sumar(operador1, operador2): number {
    let resultado = 0
    resultado = parseInt(operador1)+ parseInt(operador2);
    return resultado;
  }


}


